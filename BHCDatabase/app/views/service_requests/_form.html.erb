<%= form_for(@service_request) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.hidden_field(:user_id, :value => current_user.id) %>
    <div class="form-column">
      <%= f.label :request %>
      <%= f.text_area :request, placeholder: "Type your request here...", class: 'form-control', size: "10x10" %>

      <%= f.submit 'Submit', class: 'btn btn-default form-submit-btn' %>
    </div>
<% end %>
