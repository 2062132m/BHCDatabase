<% provide(:title, @initiative.name) %>
<div id="initiative">
  <h1>
    <%= @initiative.name %>
  </h1>
<div class="stdcontainer">
<div class="container-fluid">
  	<div class="row">
		
		<div class="col-md-6">
 			 
   			
      			<br>
     			 Area: <%= link_to @area.name, @area %>
     			 <br>
      			Location: <%= @initiative.location %>
			<br>
			Number of Members: 16
    			</p>
		</div>
		<div class="col-md-6">
			 <p>
     			 <%= @initiative.description %>
		</div>

    			
  	</div>
</div>


<ul class="areas">
      			<% @meetings.each do |meeting| %>
          		<li>
            		<h3><%= link_to meeting.datetime, meeting %></h3>
          		</li>
      			<% end %>
    			</ul>
</div>

</div>
