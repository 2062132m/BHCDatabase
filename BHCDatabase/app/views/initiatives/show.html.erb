<% provide(:title, @initiative.name) %>
<div id="initiative">
  <h1>
    <%= @initiative.name %>
  </h1>
  <div class="stdcontainer">
    <div class="container-fluid">
      <%= link_to 'Edit', edit_initiative_path, class: 'btn btn-default' %>
      <div class="row">
        <div class="col-md-6">
          <div align="left">
            <h2>
              <icon class="glyphicon glyphicon-list-alt">Area: <%= link_to @area.name, @area %></icon>
            </h2>

            <h2>
              <icon class="glyphicon glyphicon-map-marker">Location: <%= @initiative.location %></icon>
            </h2>

            <!-- <icon class="glyphicon glyphicon-user">Number of Members: <%= User.count(params[:id]) %></icon> -->
          </div>
        </div>
        <div class="col-md-6">
          <div align="left">
            <h2>
              <icon class="glyphicon glyphicon-info-sign">Description : <%= @initiative.description %></icon>
            </h2>
          </div>
        </div>
      </div>
    </div>
  </div>
  <h1 id="meetingtitle">Meetings</h1>
  <div class="stdcontainer">
    <%= datagrid_table(@meetings_in_initiatives_grid) %>
    <%= will_paginate @meetings_in_initiatives_grid.assets %>
  </div>
</div>
