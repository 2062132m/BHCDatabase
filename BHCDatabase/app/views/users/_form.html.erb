<%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :forename %>
    <%= f.text_field :forename, class: "form-control" %>

    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>

    <%= f.label :telephone %>
    <%= f.text_field :telephone, class: "form-control" %>

    <%= f.label :emergency_telephone %>
    <%= f.text_field :emergency_telephone, class: "form-control" %>

    <%= f.label :dob %>
    <%= f.date_select :dob, { :start_year => 1900, :end_year => Date.today.year }, { class: "form-control" } %>

    <%= f.label :aims %><br>
    <%= f.select :aims, User.aims.map { |x, y| [x.humanize, y] } %>

    <%= f.label :privilege %>
    <%= f.number_field :privilege, in: 0.0..2.0, step: 1.0, class: "form-control" %>

    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>

    <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
