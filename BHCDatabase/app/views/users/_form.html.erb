<%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="col-md-6">
      <div class="form-column">
        <h4>Forename</h4>
        <%= f.text_field :forename, class: "form-control" %>

        <h4>Surname</h4>
        <%= f.text_field :surname, class: "form-control" %>

        <h4>CHI</h4>
        <%=	f.text_field :chi, class: "form-control" %>

        <h4>Known As</h4>
        <%= f.text_field :known_as, class: "form-control" %>

        <h4>Address First Line</h4>
        <%= f.text_field :address1, class: "form-control" %>

        <h4>Address Second Line</h4>
        <%= f.text_field :address2, class: "form-control" %>

        <h4>Town</h4>
        <%= f.text_field :town, class: "form-control" %>

        <h4>Postcode</h4>
        <%= f.text_field :postcode, class: "form-control" %>

        <h4>Email</h4>
        <%= f.email_field :email, class: "form-control" %>

        <h4>Telephone</h4>
        <%= f.text_field :telephone, class: "form-control" %>

        <h4>Emergency Telephone</h4>
        <%= f.text_field :emergency_telephone, class: "form-control" %>

        <h4>Emergency Contact Name</h4>
        <%= f.text_field :emergency_name, class: "form-control" %>

        <h4>Date of Birth</h4>
        <%= f.date_select :dob, {:start_year => 1900, :end_year => Date.today.year}, {class: "form-control"} %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-column">
        <h4>Aims</h4>
        <%= f.select :aims, User.aims.keys.map { |x| [x.humanize, x] }, {}, {class: "form-control"} %>

        <h4>Other Aims</h4>
        <%= f.text_area :aims_other, class: "form-control" %>

        <h4>Reason that could prevent attending</h4>
        <%= f.text_area :prevent_attending, class: "form-control" %>

        <h4>Registration Date</h4>
        <%= f.date_select :reg_date, {}, class: "form-control" %>

        <h4>Privilege</h4>
        <%= f.select :privilege, options_for_select({"Admin" => 0, "Volunteer" => 1, "Service User" => 2}, 2), {}, { class: "form-control" } %>

        <h4>Password</h4>
        <%= f.password_field :password, class: "form-control" %>

        <h4>Password Confirmation</h4>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
    <%= f.submit 'Submit', class: 'btn btn-default form-submit-btn' %>
<% end %>
