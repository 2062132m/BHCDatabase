<%= form_for @user, :url => { :action => "update" } do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>

    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>

    <%= f.label :telephone %>
    <%= f.text_field :telephone, class: "form-control" %>

    <%= f.label :emergency_contact %>
    <%= f.text_field :emergency_contact, class: "form-control" %>

    <%= f.label :dob %>
    <%= f.date_select :dob, { :start_year => 1900, :end_year => Date.today.year }, { class: "form-control" } %>

    <%= f.label :privilege %>
    <%= f.select :privilege, options_for_select({"Admin" => 0, "Volunteer" => 1, "Service User" => 2}, @user.privilege), {}, { class: "form-control" } %>

    <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
