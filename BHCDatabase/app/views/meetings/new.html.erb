<% provide(:title, 'New Session') %>
<div id="initiative">
  <div class="stdcontainer">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-6">
          <h2 id="show-title">New Meeting</h2>
        </div>
      </div>
      <div class="row">
        <p>This is where new meetings can be arranged for <%= link_to Initiative.find(params[:initiative_id]).name, Initiative.find(params[:initiative_id]) %>.
        Please select the date and time you would like the next meeting to be scheduled for (note: the default is one week after the last scheduled meeting).
        You can arrange for this meeting to run at the same time multiple weeks into the future by modifying the 'Weeks to run for' field.
        </p><br>
      </div>
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <%= render 'form' %>
        </div>
      </div>
  </div>
</div>
