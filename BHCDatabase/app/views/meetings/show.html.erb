<% provide(:title, @meeting.datetime) %>
<div id="meeting">
  <h1>
    <%= @meeting.datetime.strftime("%B %d, %Y - %H:%M") %>
  </h1>
  <div class="stdcontainer">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-6">
            <h2>
              <icon class="glyphicon glyphicon-list-alt"> Area: </icon>
            </h2>
            <ht><%= link_to @meeting.initiative.area.name, @meeting.initiative.area %></ht>
            <h2>
              <icon class="glyphicon glyphicon-map-marker"> Location: </icon>
            </h2>
            <ht><%= @meeting.initiative.location %></ht>
            <% if @meeting.attendances.count != 0 %>
              <h2>Attendance: <%= @meeting.attendance %>%</h2>
              <% @users.each do |user| %>
                  <h3><%= link_to user.name, user %></h3>
              <% end %>
            <% else %>
            <h3>Attendance</h3>
            <%= form_for @attendance do %>
              <% @initiative.users.each do |user| %>
                <h2 class="enrol"><%= user.name %></h2>
                <%= check_box_tag('attendance[]', {:user_id => user.id, :meeting_id => @meeting.id}) %>
              <% end %>
              <%= submit_tag "Submit", class: "btn btn-default enrol-btn" %>
            <% end %>
          <% end %>
        </div>
        <div class="col-md-6">
          <h2>
            <icon class="glyphicon glyphicon-info-sign"> Description:</icon>
          </h2>
          <ht><%= @meeting.initiative.description %></ht>
          <h2>
            <icon class="glyphicon glyphicon-info-sign"> Volunteers:</icon>
          </h2>
          <% @initiative.users.each do |user| %>
            <% if user.privilege == 1 %>
              <h2><%= user.name %></h2>
            <% end %>
          <% end %>
        </div>
      </div>
  </div>
</div>
