<div class="row stdcontainer">
    <% @areas.each do |area| %>
      <% unless area.archived %>
        <div class="col-md-3">
          <h3><%= link_to simple_format(area.name), area %></h3>
          <div class="list-group">
            <% Initiative.where(area_id: area.id).order("LOWER (name) ASC").each do |initiative| %>
              <% unless initiative.archived %>
                <%= link_to initiative.name, initiative,
                 class: "list-group-item list-group-item-action" %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
</div>
<h1 id="meetingtitle">Service Requests</h1>
<div class="row stdcontainer">
  <%= datagrid_table(@service_requests_grid) %>
</div>
<h1>Statistics</h1>
<div class="stdcontainer">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6">
        <h2 id="graph-title">Monthly Total Attendance</h2>
        <%= line_chart Attendance.all.group_by_month(:created_at).count, xtitle: "Month", ytitle: "Attendances" %>
      </div>
      <div class="col-md-6">
        <h2 id="graph-title">Monthly Average Attendance</h2>
        <%= line_chart Meeting.all.group_by_month(:datetime).average(:attendance), xtitle: "Month", ytitle: "Attendance %" %>
      </div>
    </div>
  </div>
</div>
