<%= form_for(@enrolment) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <% if params[:initiative_id] == nil %>
      <%= f.label :initiative %>
      <%= f.select :initiative_id, options_for_select(@initiatives.map { |s| [s.name, s.id] }), {}, { class: "form-control" } %>
    <% else %>
      <!-- other form logic goes here -->
    <% end %>

    <% if params[:user_id] == nil %>
      <%= f.label :user %>
      <%= f.select :user_id, options_for_select(@users.map { |s| [s.name, s.id] }), {}, { class: "form-control" } %>
    <% else %>
      <!-- other form logic goes here -->
    <% end %>

    <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
