<%= form_for(@enrolment) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :initiative %>
    <%= f.select :initiative_id, options_for_select(@initiatives.map { |s| [s.name, s.id] }) %>

    <%= f.label :user %>
    <%= f.select :user_id, options_for_select(@users.map { |s| [s.name, s.id] }) %>

    <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
