<% provide(:title, @user.name) %>

<h1>Home</h1>

<div class="stdcontainer">

  <% if @user.feedback_due <= Date.today %>
      Your feedback was due <%= (Date.today - @user.feedback_due).to_i %> day(s) ago <br>
      <%= link_to 'Leave feedback', new_feedback_path, class: 'btn btn-success' %>
  <% else %>
      Your feedback is due in... <br>
      <%= link_to (Date.today - @user.feedback_due).to_i.to_s + ' days', new_feedback_path, class: 'btn btn-warning disabled' %>
  <% end %>

  <% @user.initiatives.each do |i| %>

      <h3><%= link_to i.name, i %></h3>
      <% i.users.each do |x| %>
          <%= link_to x.name, x %>
          <% if x.privilege == 1 %>
              <%= x.telephone %>
          <% end %>
      <% end %>
      <h2><%= i.location %></h2>
      <h2><%= i.description %></h2>
  <% end %>
</div>
