<% provide(:title, @user.name) %>

<div id="userhome">
  <h1>Home</h1>
  <div class="stdcontainer" id="userhomecontainer">
    <% if @user.feedback_due <= Date.today %>
        Your feedback was due <%= (Date.today - @user.feedback_due).to_i %> day(s) ago <br>
        <%= link_to 'Leave feedback', new_feedback_path, class: 'btn btn-success' %>
    <% else %>
        Your feedback is due in... <br>
        <%= link_to (@user.feedback_due - Date.today).to_i.to_s + ' days', new_feedback_path, class: 'btn btn-warning disabled' %>
    <% end %>
    <h1>Your Initiatives</h1>
    <div class="row">
      <% @user.initiatives.each do |i| %>
        <div class="col-md-8">
          <h3><%= link_to i.name, i %></h3>
          <div id="details">
            <h2>
              <icon class="glyphicon glyphicon-map-marker"> Location:</icon>
            </h2>
            <h4><%= i.location %></h4>
            <h2>
              <icon class="glyphicon glyphicon-info-sign"> Description:</icon>
            </h2>
            <h4><%= i.description %></h4>
          </div>
        </div>
        <div class="col-md-4">
          <div id="volunteer-list">
            <h4>Initiative Volunteers:</h4>
            <% i.users.each do |x| %>
              <% if x.privilege == 1 %>
                <h4>
                  <%= link_to x.name, x %>
                  <%= x.telephone %>
                </h4>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
