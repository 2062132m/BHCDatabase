<% provide(:title, @funder.name) %>

<div id="initiative">
  <div class="stdcontainer">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-6">
          <h2 id="show-title"><%= @funder.name %></h2>
          <div>
            <h2 id="show-sub-title"><%= @funder.address %></h2>
          </div>
          <table id="info-table">
            <tr>
              <td>Description:</td>
              <td><icon class="glyphicon glyphicon-info-sign"></icon><%= @funder.description %></td>
            </tr>
            <tr>
              <td>Website:</td>
              <td><icon class="glyphicon glyphicon-share-alt"></icon><%= link_to @funder.url, @funder.url %></td>
            </tr>
            <tr>
              <td>Email:</td>
              <td><icon class="glyphicon glyphicon-envelope"></icon><%= @funder.email %></td>
            </tr>
            <tr>
              <td>Telephone:</td>
              <td><icon class="glyphicon glyphicon-earphone"></icon><%= @funder.telephone %></td>
            </tr>
          </table>
          <br>
        </div>
        <div class="col-md-6">
          <div class="container-fluid buttons-container right-split">
            <%= link_to "<i class='glyphicon glyphicon-trash'></i> Delete".html_safe, @funder, method: :delete,
                        data: {confirm: "Are you sure you want to delete this funder?"},
                        class: "btn btn-default delete-btn" %>
            <%= link_to "<i class='glyphicon glyphicon-edit'></i> Edit".html_safe, edit_funder_path, class: 'btn btn-default edit-btn' %>
          </div>
          <div class="info-container">
            <h2 id="show-details-title">Funder Details</h2>
            <h2>
              Directly Funding <%= @initiatives.count %> initiative(s):
              <% i = 0 %>
              <% @initiatives.each do |initiative| %>
                  <%= link_to initiative.name, initiative %>
                  <% unless i == @initiatives.length - 1 %>,
                  <% end %>
                  <% i = i + 1 %>
              <% end %>
            </h2>
            <h2>
              Directly Funding <%= @medical_conditions.count %> medical_condition(s):
              <% i = 0 %>
              <% @medical_conditions.each do |medical_condition| %>
                  <%= link_to medical_condition.name, medical_condition %>
                  <% unless i == @medical_conditions.length - 1 %>,
                  <% end %>
                  <% i = i + 1 %>
              <% end %>
            </h2>
            <h2>
              Directly Funding <%= @users.count %> users(s):
              <% i = 0 %>
              <% @users.each do |user| %>
                  <%= link_to user.known_as, user %>
                  <% unless i == @users.length - 1 %>,
                  <% end %>
                  <% i = i + 1 %>
              <% end %>
            </h2>
            <h2>To see which users are affected by funding an initiative or a medical condition, click through to see the
              member list</h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
