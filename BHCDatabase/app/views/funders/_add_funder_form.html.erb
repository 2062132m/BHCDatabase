<%= form_for @fund, :url => { :action => "new_fund_initiative"} do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
      <% @funders = Funder.all %>

      <%= f.label "Funder" %>
      <%= f.select :funder_id, options_for_select(@funders.map { |s| [s.name, s.id] }), {}, { class: "form-control" } %>

      <% if params[:initiative_id] != nil %>
        <%= f.hidden_field(:initiative_id, :value => Initiative.find(params[:initiative_id]).id) %>
      <% elsif params[:medical_condition_id] != nil %>
        <%= f.hidden_field(:medical_condition_id, :value => MedicalCondition.find(params[:medical_condition_id]).id) %>
      <% elsif params[:user_id] != nil %>
        <%= f.hidden_field(:user_id, :value => User.find(params[:user_id]).id) %>
      <% end %>

    <%= f.submit 'Submit', class: 'btn btn-default submit-btn' %>
<% end %>
