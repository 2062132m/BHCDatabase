<%= form_for(@area) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-column">
      <h4>Name</h4>
      <%= f.text_field :name, class: 'form-control' %>

      <h4>Description</h4>
      <%= f.text_area :description, class: 'form-control' %>

      <%= f.submit 'Submit', class: 'btn btn-default form-submit-btn' %>
    </div>
<% end %>
