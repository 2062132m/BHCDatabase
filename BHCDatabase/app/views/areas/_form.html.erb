<%= form_for(@area) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-column">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>

      <%= f.submit 'Submit', class: 'btn btn-default form-submit-btn' %>
    </div>
<% end %>
