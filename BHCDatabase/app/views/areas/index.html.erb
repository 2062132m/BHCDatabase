<% provide(:title, 'Areas') %>
<div id="indexcontainer">
  <h1>Areas</h1>

  <div class="stdcontainer">
    <%= datagrid_form_for @areas_grid, url: areas_path %>

    <%= link_to "<i class='glyphicon glyphicon-plus'></i> New".html_safe, new_area_path, class: 'btn btn-default new-btn' %>

    <%= datagrid_table(@areas_grid) %>
    <%= will_paginate @areas_grid.assets %>

    <div class="CSV-container">
      <%= link_to "<i class='glyphicon glyphicon-download-alt'></i> Download CSV".html_safe, url_for(format: 'csv', areas_grid: params[:areas_grid].to_h), class: "CSV" %>
    </div>
  </div>
</div>
