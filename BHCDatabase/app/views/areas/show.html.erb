<% provide(:title, @area.name) %>
<div id="area">
  <h1>
    <%= @area.name %>
  </h1>

  <div class="stdcontainer">

    <h2>
      <%= @area.description %>
    </h2>

    <%= link_to 'Edit', edit_area_path, class: 'btn btn-default' %>

    <%= datagrid_table(@initiatives_in_area_grid) %>
    <%= will_paginate @initiatives_in_area_grid.assets %>
    <%= link_to "Delete Area", @area, method: :delete,
                                data: { confirm: "Are you sure you want to delete this area?" },
                                  class: "btn btn-default" %>
  </div>
</div>
