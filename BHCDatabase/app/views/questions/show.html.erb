<% provide(:title, @question.id) %>
<div id="question">
  <h1>
    Question <%= @question.id %>
  </h1>

  <div class="stdcontainer">

    <h2>
      <%= @question.question %>
    </h2>

    <%= link_to 'Edit', edit_question_path, class: 'btn btn-default' %>

    <%= link_to "Delete Question", @question, method: :delete,
                data: { confirm: "Are you sure you want to delete this question? (Questions aren't deleted)" },
                class: "btn btn-default" %>
  </div>
</div>
